
@model Post

<h2>Edit @Model.Restaurant.Name</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPost" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Restaurant.Name" class="control-label"></label>
                <input asp-for="Restaurant.Name" class="form-control" />
                <span asp-validation-for="Restaurant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Phone" class="control-label"></label>
                <input asp-for="Restaurant.Phone" class="form-control" />
                <span asp-validation-for="Restaurant.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Address" class="control-label"></label>
                <input asp-for="Restaurant.Address" class="form-control" />
                <span asp-validation-for="Restaurant.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Type" class="control-label"></label>
                <input asp-for="Restaurant.Type" class="form-control" />
                <span asp-validation-for="Restaurant.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.WorkHours" class="control-label"></label>
                <input asp-for="Restaurant.WorkHours" class="form-control" />
                <span asp-validation-for="Restaurant.WorkHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Menu" class="control-label"></label>
                <input asp-for="Restaurant.Menu" class="form-control" />
                <span asp-validation-for="Restaurant.Menu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Capacity" class="control-label"></label>
                <input asp-for="Restaurant.Capacity" class="form-control" />
                <span asp-validation-for="Restaurant.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SelectPostEdit" asp-controller="Post">Cancel</a>
</div>

